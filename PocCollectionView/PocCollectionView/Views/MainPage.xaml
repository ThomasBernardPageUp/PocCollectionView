<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocCollectionView.Views.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#322F32" Padding="24" CornerRadius="0">
            <Label Text="Compare collection views" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Collection views" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Click on each button to compare perfs :" FontSize="16" Padding="30,0,30,0"/>
        <StackLayout Margin="20">
            <Button Command="{Binding DefaultCollectionCommand}" Text="Check default collection view"></Button>
            <Button Command="{Binding SharpnadoCollectionCommand}" Text="Check sharpnado collection view"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
